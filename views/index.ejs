  <body>
    <!-- Header section -->
    <header class="bg-white shadow">
      <div class="container mx-auto px-6 py-3">
        <div class="flex items-center justify-between">
          <div class="hidden md:block">
            <a
              class="text-gray-800 font-bold text-xl hover:text-gray-700"
              href="/"
            >
              <!-- logo -->
              <img class="h-20 w-auto" src="/images/icon.png" alt="logo" />
              <span class="sr-only">
                Welch Digital
              </span>
            </a>
          </div>
          <div class="md:hidden">
            <button
              class="text-gray-800 hover:text-gray-700 focus:outline-none focus:text-gray-700"
              aria-label="toggle menu"
            >
              <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current">
                <path
                  fill-rule="evenodd"
                  d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"
                ></path>
              </svg>
            </button>
          </div>
          <nav class="hidden md:block">
            <ul class="ml-4 flex items-center">
              <li>
                <a
                  class="text-gray-800 hover:text-gray-700 font-semibold py-2 px-4"
                  href="#services"
                  >Services</a
                >
              </li>
              <li>
                <a
                  class="text-gray-800 hover:text-gray-700 font-semibold py-2 px-4"
                  href="#portfolio"
                  >Portfolio</a
                >
              </li>
              <li>
                <a
                  class="text-gray-800 hover:text-gray-700 font-semibold py-2 px-4"
                  href="#team"
                  >Team</a
                >
              </li>
              <li>
                <a
                  class="text-gray-800 hover:text-gray-700 font-semibold py-2 px-4"
                  href="#contact"
                  >Contact</a
                >
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <!-- Hero section -->
    <section class="relative bg-gray-100 py-8 md:py-10 lg:py-12 xl:py-24">
      <img class="absolute top-0 left-0 h-full w-full object-cover z-0" src="/images/hero.jpg" alt="Digital Marketing Agency" />
      <div class="absolute top-0 left-0 h-full w-full bg-black opacity-70 z-10"></div>
      <div class="relative container mx-auto px-6 z-20">
        <h1 class="text-4xl font-bold mb-2 text-white">
          We are Welch Digital
        </h1>
        <h2 class="text-2xl mb-8 text-gray-100">
          Your digital partner for success
        </h2>
        <button
          class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded"
        >
          Get Started
        </button>
      </div>
    </section>

    <!-- Services section -->
    <section id="services" class="bg-white py-8 md:py-10 lg:py-12 xl:py-20">
      <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold mb-4 md:mb-6 lg:mb-8 xl:mb-16 text-gray-800 text-center">
          Services
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 lg:gap-10">
          <div class="flex flex-col flex-grow flex-shrink">
            <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow">
              <div class="flex flex-wrap no-underline hover:no-underline">
                <p class="w-full text-gray-600 text-xs md:text-sm px-6 py-4">
                  Web Design
                </p>
                <div class="w-full font-bold text-xl text-gray-800 px-6">
                  Beautifully designed websites
                </div>
                <p class="text-gray-800 text-base px-6 mb-5">
                  We design and develop beautiful, responsive websites that
                  look great on any device.
                </p>
              </div>
            </div>
            <div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow p-6">
              <div class="flex items-center justify-start">
                <button
                  class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded"
                >
                  Learn More
                </button>
              </div>
            </div>
          </div>
          <div class="flex flex-col flex-grow flex-shrink">
            <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow">
              <a href="#" class="flex flex-wrap no-underline hover:no-underline">
                <p class="w-full text-gray-600 text-xs md:text-sm px-6 py-4">
                  Web Development
                </p>
                <div class="w-full font-bold text-xl text-gray-800 px-6">
                  Custom web applications
                </div>
                <p class="text-gray-800 text-base px-6 mb-5">
                  We build custom web applications that are tailored to your
                  specific business needs.
                </p>
              </a>
            </div>
            <div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow p-6">
              <div class="flex items-center justify-start">
                <button
                  class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded"
                >
                  Learn More
                </button>
              </div>
            </div>
          </div>
          <div class="flex flex-col flex-grow flex-shrink">
            <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow">
              <a href="#" class="flex flex-wrap no-underline hover:no-underline">
                <p class="w-full text-gray-600 text-xs md:text-sm px-6 py-4">
                  Digital Marketing
                </p>
                <div class="w-full font-bold text-xl text-gray-800 px-6">
                  Grow your business online
                </div>
                <p class="text-gray-800 text-base px-6 mb-5">
                  We help businesses grow their online presence through
                  effective digital marketing strategies.
                </p>
              </a>
            </div>
            <div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow p-6">
              <div class="flex items-center justify-start">
                <button
                  class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded"
                >
                  Learn More
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Portfolio section -->
    <section id="portfolio" class="bg-gray-100 py-8 md:py-10 lg:py-12 xl:py-20">
      <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold mb-2 md:mb-6 lg:mb-8 xl:mb-16 text-gray-800 text-center">
          Portfolio
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 lg:gap-10 justify-center">
          <div class="flex flex-col flex-grow flex-shrink">
            <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow">
              <a href="https://nuuvex.co.uk" target="_blank" class="flex flex-wrap no-underline hover:no-underline">
                <img
                  src="/images/s_ss1.png"
                  class="h-64 w-full rounded-t pb-6 object-cover object-top"
                  loading="lazy"
                  alt="Screenshot of Nuuvex website"
                />
                <p class="w-full text-gray-600 text-xs md:text-sm px-6 py-4">
                  Web Design &amp; Development
                </p>
                <div class="w-full font-bold text-xl text-gray-800 px-6">
                  Nuuvex
                </div>
                <p class="text-gray-800 text-base px-6 mb-5">
                  Minimal design, maximum impact. We designed and developed a new website for Nuuvex.
                </p>
              </a>
            </div>
          </div>
          <div class="flex flex-col flex-grow flex-shrink">
            <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow">
              <a href="https://predatorluresuk.co.uk" target="_blank" class="flex flex-wrap no-underline hover:no-underline">
                <img
                  src="/images/s_ss3.png"
                  class="h-64 w-full rounded-t pb-6 object-cover object-top"
                  loading="lazy"
                  alt="Screenshot of Predator Lures UK website"
                />
                <p class="w-full text-gray-600 text-xs md:text-sm px-6 py-4">
                  E-Commerce Platform
                </p>
                <div class="w-full font-bold text-xl text-gray-800 px-6">
                  Predator Lures UK
                </div>
                <p class="text-gray-800 text-base px-6 mb-5">
                  All your fishing lures in one place! We designed and developed an e-commerce platform and website store for Predator Lures UK.
                </p>
              </a>
            </div>
          </div>
          <div class="flex flex-col flex-grow flex-shrink">
            <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow">
              <a href="https://welchsbuildingservices.co.uk" target="_blank" class="flex flex-wrap no-underline hover:no-underline">
                <img
                  src="/images/s_ss2.png"
                  class="h-64 w-full rounded-t pb-6 object-cover object-top"
                  loading="lazy"
                  alt="Screenshot of Welch's Building Services website"
                />
                <p class="w-full text-gray-600 text-xs md:text-sm px-6 py-4">
                  Web Design &amp; Development
                </p>
                <div class="w-full font-bold text-xl text-gray-800 px-6">
                  Welch's Building Services
                </div>
                <p class="text-gray-800 text-base px-6 mb-5">
                  A website for a tradesman. We designed and developed a new website for Welch's Building Services.
                </p>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Team section -->
    <section id="team" class="bg-white py-8 md:py-10 lg:py-12 xl:py-20 max-w-4xl mx-auto">
      <div class="container mx-auto">
        <h2 class="text-4xl font-bold mb-2 md:mb-6 lg:mb-8 xl:mb-16 text-gray-800 text-center">
          Team
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-6 lg:gap-10 xl:gap-20 text-center">
          <div class="flex flex-col flex-grow flex-shrink">
            <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-20 h-20 mx-auto mb-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.25 9.75L16.5 12l-2.25 2.25m-4.5 0L7.5 12l2.25-2.25M6 20.25h12A2.25 2.25 0 0020.25 18V6A2.25 2.25 0 0018 3.75H6A2.25 2.25 0 003.75 6v12A2.25 2.25 0 006 20.25z" />
              </svg>              
              <div class="w-full font-bold text-xl text-gray-800 px-6 mb-2">
                James Welch
              </div>
              <p class="w-full text-gray-600 text-xs md:text-sm px-6 mb-2">
                Developer
              </p>
              <p class="text-gray-800 text-base px-6 mb-5">
                James is an experienced software engineer with a passion for building things.
              </p>
            </div>
          </div>
          <div class="flex flex-col flex-grow flex-shrink">
            <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-20 h-20 mx-auto mb-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" />
              </svg>              
              <div class="w-full font-bold text-xl text-gray-800 px-6 mb-2">
                Agata Kleba
              </div>
              <p class="w-full text-gray-600 text-xs md:text-sm px-6 mb-2">
                Designer
              </p>
              <p class="text-gray-800 text-base px-6 mb-5">
                Agata is a talented designer who loves to create beautiful things.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact section -->
    <section id="contact" class="relative bg-gray-100 py-8 md:py-10 lg:py-12 xl:py-20">
      <h2 class="text-4xl font-bold mb-2 md:mb-6 lg:mb-8 xl:mb-16 text-gray-800 text-center">
        Contact Us
      </h2>
      <div class="w-full mx-auto max-w-4xl">
        <form
          class="max-w-[calc(90%)] mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
          action="#"
          method="POST"
        >
          <div class="mb-4">
            <label
              class="block text-gray-700 text-sm font-bold mb-2"
              for="name"
            >
              Name
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              id="name"
              type="text"
              placeholder="Name"
            />
          </div>
          <div class="mb-4">
            <label
              class="block text-gray-700 text-sm font-bold mb-2"
              for="email"
            >
              Email
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              id="email"
              type="email"
              placeholder="Email"
            />
          </div>
          <div class="mb-4">
            <label
              class="block text-gray-700 text-sm font-bold mb-2"
              for="message"
            >
              Message
            </label>
            <textarea
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              id="message"
              placeholder="Message"
            ></textarea>
          </div>
          <div class="flex items-center justify-between">
            <button
              class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              type="button"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </section>

    <!-- Footer section -->
    <footer class="bg-white">
      <div class="container mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
          <div class="text-gray-800 font-bold text-xl">
            &copy;
            <a
              class="hover:text-purple-700"
              href="/"
            >
              Welch Digital
            </a>
            2023
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>